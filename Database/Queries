--1 NEEDS WORK
SELECT 'Premier', custName, custPhone, custEmail FROM Premier
NATURAL JOIN Customer
UNION
SELECT 'Steady',custName, custPhone, custEmail FROM Steady
NATURAL JOIN Customer
UNION
SELECT 'Prospective',custName, custPhone, custEmail FROM Prospective
NATURAL JOIN Customer;
